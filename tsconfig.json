{
  "compilerOptions": {                     /* Enable incremental compilation */
    "target": "es6",                                
    "module": "commonjs",                          
    "outDir": "./dist",                              
    "strict": true,                                
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "baseUrl": "./",
    "paths": {
      "test/*": ["test/*"]
    }       /* Disallow inconsistently-cased references to the same file. */
  },
  "include": [ "src/**/*"],
  "exclude" : ["src/**/*.test.ts"]
}
